---
import projectsEs from "../../collections/es/projects.json";
import projectsEn from "../../collections/en/projects.json";
import Project from "../project.astro";
const { locale } = Astro.props;
---

<section class="max-w-4xl mx-auto px-7 lg:px-0">
  <h2 class="text-2xl font-bold leading-10 tracking-tight text-neutral-900 dark:text-neutral-100">My Projects</h2>
  <p class="mb-6 text-base text-neutral-600 dark:text-neutral-400">
    This list includes some of the most recent projects I have worked on, which are stored in private repositories. If you are interested in viewing more details or samples, please feel free to contact me directly.
  </p>
  <div class="grid items-stretch w-full md:grid-cols-2 gap-7 mt-7">
    { locale == "es" ?
      projectsEs.map((project) => {
        return (
          <Project name={project.name} description={project.description} image={project.image} url={project.url} />
        );
      }) :
      projectsEn.map((project) => {
        return (
          <Project name={project.name} description={project.description} image={project.image} url={project.url} />
        );
      })
    }
  </div>
</section>
